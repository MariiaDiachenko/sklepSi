{% extends 'base.html.twig' %}

{% block title %}{{ 'title.shop_index' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'header.shop_index' | trans }}</h1>
    <div class="navigation text-center">
      {{ knp_pagination_render(shops) }}
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'id' | trans }}</th>
                <th> {{ 'name' | trans }} </th>
                <th>{{ 'address' | trans }}</th>
                <th>{{ 'phone' | trans }}</th>
                <th>{{ 'email' | trans }}</th>
                <th> {{ 'actions' | trans }} </th>
            </tr>
        </thead>
        <tbody>
        {% for shop in shops %}
            <tr>
                <td>{{ shop.id }}</td>
                <td>{{ shop.name }}</td>
                <td>{{ shop.Address }}</td>
                <td>{{ shop.phone }}</td>
                <td>{{ shop.email }}</td>
                <td>
                    <a href="{{ path('shop_show', {'id': shop.id}) }}">{{ 'button.show' | trans }}</a>
                    <a href="{{ path('shop_edit', {'id': shop.id}) }}">{{ 'button.edit' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'no_records_found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation text-center">
      {{ knp_pagination_render(shops) }}
    </div>
    <a href="{{ path('shop_new') }}">{{'button.create_new' | trans }}</a>
{% endblock %}
