{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
    <h1>Shop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shop.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ shop.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ shop.Address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ shop.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ shop.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('shop_index') }}">{{ 'button.back_to_list' | trans }}</a>

    <a href="{{ path('shop_edit', {'id': shop.id}) }}">edit</a>

