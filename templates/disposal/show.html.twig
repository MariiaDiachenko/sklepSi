{% extends 'base.html.twig' %}

{% block title %}{{ 'title.disposal_show' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'header.disposal_show' | trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'id' | trans }}</th>
                <td>{{ disposal.id }}</td>
            </tr>
            <tr>
                <th>{{ 'address' | trans }}</th>
                <td>{{ disposal.address }}</td>
            </tr>
            <tr>
                <th>{{ 'status' | trans }}</th>
                <td>{{ disposal.status }}</td>
            </tr>
            <tr>
                <th>{{ 'created_at' | trans }}</th>
                <td>{{ disposal.createdAt ? disposal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'updated_at' | trans }}</th>
                <td>{{ disposal.updatedAt ? disposal.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            {% for detail in disposal.disposalDetails %}
              <tr>
                  <th>{{ 'product_name' | trans }}</th>
                  <td>{{ detail.productName}} {{detail.copiedPrice|slice(0,-2) ~ '.' ~ detail.copiedPrice|slice(-2) ~ ' z≈Ç'}} x{{detail.quantity}}</td>
              </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('disposal_index') }}">{{ 'button.back_to_list' | trans }}</a>

    <a href="{{ path('disposal_edit', {'id': disposal.id}) }}">{{ 'button.edit' | trans }}</a>

    {{ include('disposal/_delete_form.html.twig') }}
{% endblock %}
