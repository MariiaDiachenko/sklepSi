{% extends 'base.html.twig' %}

{% block title %}{{ 'title.category_show' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'header.category_show' | trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'id' | trans }}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th> {{ 'name' | trans }} </th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">{{ 'button.back_to_list' | trans }}</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">{{ 'button.edit' | trans }}</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
