{% extends 'base.html.twig' %}

{% block title %}{{ 'title.category_index' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'header.category_index' | trans }}</h1>

    <div class="navigation text-center">
      {{ knp_pagination_render(categories) }}
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'id' | trans }}</th>
                <th> {{ 'name' | trans }} </th>
                <th> {{ 'actions' | trans }} </th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">{{ 'button.show' | trans }}</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">{{ 'button.edit' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'no_records_found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation text-center">
      {{ knp_pagination_render(categories) }}
    </div>

    <a href="{{ path('category_new') }}">{{'button.create_new' | trans }}</a>
{% endblock %}
