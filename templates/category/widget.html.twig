<div class="list-group">
  <h3>{{ 'header.categories' | trans }}</h3>
  <a href="{{ path('product_index') }}" class="list-group-item">{{ 'all' | trans }}</a>
  {% for category in categories %}
    <a href="{{ path('product_index', {category: category.id}) }}" class="list-group-item">{{category.name}}</a>
  {% endfor %}
</div>
